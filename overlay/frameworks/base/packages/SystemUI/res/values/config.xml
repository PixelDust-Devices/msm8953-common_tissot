<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Doze: does this device support STATE_DOZE?  -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- Max visible notification icons -->
    <integer name="config_maxVisibleNotificationIcons">6</integer>
    <integer name="config_maxVisibleNotificationIconsWhenDark">7</integer>

    <!-- If true, enable the advance anti-falsing classifier on the lockscreen. On some devices it
         does not work well, particularly with noisy touchscreens. Note that disabling it may
         increase the rate of unintentional unlocks. -->
    <bool name="config_lockscreenAntiFalsingClassifierEnabled">false</bool>

    <!-- FPSInfoService Fps file path -->
    <string name="config_fpsInfoSysNode" translatable="false">/sys/devices/virtual/graphics/fb0/measured_fps</string>
     <!-- LockScreenCharger current sysfs path -->
    <string name="config_currentPath">/sys/class/power_supply/battery/current_now</string>


    <!-- LockScreenCharger voltage sysfs path -->
    <string name="config_voltagePath">/sys/class/power_supply/battery/voltage_now</string>

    <!-- LockScreenCharger current inversion -->
    <bool name="showInvertedCurrent">true</bool>
     <bool name="config_liveDisplayAvailable">true</bool>
    <!-- The battery voltage divider, if needed -->
     <integer name="config_battVoltageDivider" translatable="false">1000</integer>


     <!-- The battery current divider, if needed -->
     <integer name="config_battCurrentDivider" translatable="false">1000</integer>

</resources>

